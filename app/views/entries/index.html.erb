<h3><%= @project.title %></h3>
<h4>List of entries</h4>
<%= @project.total_time %>
<ul>
	<% @entries.each do |entry| %>
		<li> <%= " #{entry.hours} h, #{entry.minutes} min, Date : #{entry.date.strftime("%b %d, %Y")} - #{entry.comments}" %></li> 
	<% end %>
</ul>
<a href="/projects/<%= @project.id %>/entries/new">Create new entry</a>