<h3>Edit Project</h3>
<% if @project.errors.any? %>
	<ul>
		<% @project.errors.full_messages.each do |error_message| %>
			<li> <%= error_message %> </li>
		<% end %>
	</ul>
<% end %>

<%= form_for @project do |f| %>
	<div>
		<%= f.label :title %>
		<%= f.text_field :title, placeholder: "Title" %>
	</div>
	<div>
		<%= f.label :priority %>
		<%= f.number_field :priority %>
	</div>
	<div>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>
	<div>
		<%= f.submit "Update my project" %>
	</div>
<% end %>